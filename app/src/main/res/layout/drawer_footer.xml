<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer_footer_background"
    android:orientation="vertical"
    tools:ignore="RelativeOverlap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/drawer_footer_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/drawer_footer_padding"
            android:layout_alignParentStart="true"
            android:textColor="@color/drawer_footer_text_selector"
            android:textSize="@dimen/drawer_footer_text" />

        <TextView
            android:id="@+id/drawer_footer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/drawer_footer_padding"
            android:layout_alignParentEnd="true"
            android:textColor="@color/drawer_footer_text"
            android:textSize="@dimen/drawer_footer_text" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/drawer_footer_text"
        android:layout_marginStart="@dimen/drawer_footer_divider_margin"
        android:layout_marginEnd="@dimen/drawer_footer_divider_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/drawer_footer_more_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/drawer_footer_padding"
            android:layout_alignParentStart="true"
            android:text="@string/drawer_footer_more_games"
            android:textColor="@color/drawer_footer_text_selector"
            android:textSize="@dimen/drawer_footer_text" />

        <TextView
            android:id="@+id/drawer_footer_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/drawer_footer_padding"
            android:layout_alignParentEnd="true"
            android:textColor="@color/drawer_footer_text"
            android:textSize="@dimen/drawer_footer_text" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/drawer_footer_overmobile_logo"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:clickable="true"
        android:src="@drawable/drawer_footer_overmobile"
        tools:ignore="ContentDescription" />

</LinearLayout>