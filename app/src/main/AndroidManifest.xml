<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.flippy.skyscrapers">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.SkyscrapersApp"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon"
        android:theme="@style/AppTheme">

        <activity
            android:name=".application.activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".application.activities.AuthActivity"/>

        <activity android:name=".application.activities.GameActivity"/>

    </application>

</manifest>